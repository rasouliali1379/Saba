<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp">
     <LinearLayout
         android:layout_margin="10dp"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <LinearLayout
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <LinearLayout
                 android:layout_marginBottom="10dp"
                 android:gravity="end"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <TextView
                     android:id="@+id/result_item_building_age"
                     android:textColor="@color/colorAccent"
                     android:text="عمر ساختمان : 3 سال"
                     android:layout_gravity="center_vertical"
                     android:textSize="22sp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
                 <ImageView
                     android:layout_margin="2dp"
                     android:padding="5dp"
                     android:src="@drawable/ic_home_age"
                     android:layout_width="30dp"
                     android:layout_height="30dp"/>
             </LinearLayout>

             <LinearLayout
                 android:layout_marginBottom="10dp"
                 android:gravity="end"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <TextView
                     android:id="@+id/result_item_price_per_meter_txt"
                     android:textColor="@color/colorAccent"
                     android:text="قیمت هر متر : 12,000,000 تومان"
                     android:layout_gravity="center_vertical"
                     android:textSize="18sp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
                 <ImageView
                     android:layout_margin="2dp"
                     android:padding="5dp"
                     android:src="@drawable/ic_price_per_meter"
                     android:layout_width="30dp"
                     android:layout_height="30dp"/>
             </LinearLayout>
             <LinearLayout
                 android:layout_marginBottom="10dp"
                 android:gravity="end"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <TextView
                     android:id="@+id/result_item_price"
                     android:textColor="@color/colorAccent"
                     android:text="قیمت معامله شده : 700.000.000 تومان"
                     android:layout_gravity="center_vertical"
                     android:textSize="18sp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
                 <ImageView
                     android:padding="5dp"
                     android:src="@drawable/ic_price"
                     android:layout_width="30dp"
                     android:layout_height="30dp"/>
             </LinearLayout>
         </LinearLayout>
         <LinearLayout
             android:layout_gravity="end"
             android:layout_marginBottom="10dp"
             android:gravity="end"
             android:orientation="horizontal"
             android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <TextView
                     android:id="@+id/result_item_address"
                     android:textColor="@color/colorAccent"
                     android:gravity="end"
                     android:textSize="18sp"
                     android:layout_gravity="center_vertical"
                     android:text="اتوبان بابایی ، جنب خیابان فرخزاد ، پلاک 34..."
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
                 <ImageView
                     android:padding="3dp"
                     android:src="@drawable/ic_location"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
             </LinearLayout>
         <LinearLayout
             android:layout_gravity="start"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/result_item_date"
                 android:gravity="start"
                 android:text="1398/02/03"
                 android:layoutDirection="rtl"
                 android:layout_gravity="center_vertical"
                 android:textColor="@color/colorAccent"
                 android:layout_weight="2"
                 android:textSize="18sp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
             <ImageView
                 android:padding="5dp"
                 android:src="@drawable/ic_calendar"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
         </LinearLayout>
     </LinearLayout>
</androidx.cardview.widget.CardView>