<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="65dp"
        android:paddingBottom="65dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/charts_fragment_trade_per_section_btn"
            android:foreground="?android:selectableItemBackground"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="end"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorAccent"
                    android:textSize="22sp"
                    android:text="نمودار تعداد معاملات به تفکیک منطقه"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:padding="5dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_bar_chart_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/charts_fragment_average_per_section_btn"
            android:foreground="?android:selectableItemBackground"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="end"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorAccent"
                    android:textSize="22sp"
                    android:text="نمودار متوسط قیمت به تفکیک منطقه"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:padding="5dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_bar_chart_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/charts_fragment_trade_per_month_btn"
            android:foreground="?android:selectableItemBackground"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="end"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorAccent"
                    android:textSize="22sp"
                    android:text="نمودار تعداد معاملات به تفکیک ماه"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:padding="5dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_bar_chart_3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/charts_fragment_average_per_month_btn"
            android:foreground="?android:selectableItemBackground"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="end"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorAccent"
                    android:textSize="22sp"
                    android:text="نمودار متوسط قیمت به تفکیک ماه"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:padding="5dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_bar_chart_4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/charts_fragment_trade_per_zone_btn"
            android:foreground="?android:selectableItemBackground"
            android:visibility="visible"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="end"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorAccent"
                    android:textSize="22sp"
                    android:text="جدول تعداد معاملات به تفکیک محله"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:padding="5dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_list"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:visibility="visible"
            android:id="@+id/charts_fragment_average_per_zone_btn"
            android:foreground="?android:selectableItemBackground"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="end"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorAccent"
                    android:textSize="22sp"
                    android:text="جدول متوسط قیمت به تفکیک محله"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:padding="5dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_list2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>